<br>
  <h1>AVATARS</h1>
  <br>
  <div class="row">
        <% @avatars.each do |avatar| %>
        <div class="col-md-4 col-6">
          <div class="card">
          <img class="card-img-top" src="<%= avatar.src %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= link_to avatar.name, avatar_path(avatar.id) %>
            <p class="coin"><img src="https://orig00.deviantart.net/712c/f/2010/236/2/e/spinning_coin___animation_by_mantastic001.gif"><span><%= avatar.value %></span></p></h5>
            <h4>ID: <%= avatar.id %></h4>
            <p class="card-text"><%= avatar.description %></p>
            <% if avatar.is_sale %>
            <% end %>
            <%# if avatar.user_id == @current_user.id %>
            <%#= link_to 'Edit', edit_avatar_path(avatar.id), class: "btn btn-primary" %>
            <%# end %>
          </div>
            <% if avatar.is_sale == true %>
            <%= link_to 'View', avatar_path(avatar.id), class:"btn btn-primary" %>
            <% else %>
          <button class="btn btn-danger">NOT FOR SALE</button>
            <% end %>

          </div>
        </div>
          <% end %>




  </div>
