  <% if !@avatar.is_sale? %>
  <p>Sorry, this item is not for sale.</p>
  <% elsif @avatar.is_owner?( @current_user )%>
  <p><a href="#">EDIT</a> | <a href="#">DELETE</a></p>
  <% elsif @current_user.can_buy?( @avatar ) %>
  <%= button_to 'BUY NOW', order_avatar_path %>
  <% end %>
<% else %>
  <p>To Purchase, Please <%= link_to "Sign-In", login_path %> or <%= link_to "Sign-Up", new_user_path %></p>
<% end %>
