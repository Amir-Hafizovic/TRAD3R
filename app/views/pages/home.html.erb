<h4></h4>
  <div class="row justify-content-md-center">
        <% @avatars.each do |avatar| %>
        <div class="col-md-4 col-6">
          <div class="card">
          <img class="card-img-top" src="<%= avatar.src %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= link_to avatar.name, avatar_path(avatar.id) %></h5>
            <p class="card-text"><%= avatar.description %></p>
            <% if avatar.is_sale %>
            <p class="coin"><img src="https://orig00.deviantart.net/712c/f/2010/236/2/e/spinning_coin___animation_by_mantastic001.gif"><span><%= avatar.value %></span></p>
            <% end %>
          </div>

            <% if avatar.is_sale %>
            <a role="button" href="<%= avatar_path(avatar.id) %>" class="btn btn-outline-primary">VIEW</a>
            <% else %>
          <button class="btn btn-danger">NOT FOR SALE</button>
            <% end %>

          </div>
        </div>
          <% end %>




  </div>
