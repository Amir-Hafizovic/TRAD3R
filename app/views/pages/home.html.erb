<div class="container">
<br>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= @featured1.src %>" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
        <h5><%= @featured1.name %></h5>
        <p><%= @featured1.description %></p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= @featured2.src %>" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
        <h5><%= @featured2.name %></h5>
        <p><%= @featured2.description %></p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= @featured3.src %>" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
        <h5><%= @featured3.name %></h5>
        <p><%= @featured3.description %></p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <br>
  <h4></h4>
  <div class="row">
        <% @avatars.each do |avatar| %>
        <div class="col-md-4 col-6">
          <div class="card">
          <%= image_tag avatar.src, class: "card-img-top"%>
          <div class="card-body">
            <h5 class="card-title"><%= link_to avatar.name, avatar_path(avatar.id) %></h5>
            <p><strong>ID: </strong><%= avatar.id %></p>
            <p class="card-text"><%= avatar.description %></p>
            <% if avatar.is_sale %>
            <p class="coin"><img src="https://orig00.deviantart.net/712c/f/2010/236/2/e/spinning_coin___animation_by_mantastic001.gif"><span><%= avatar.value %></span></p>
            <% end %>
          </div>

            <% if avatar.is_sale == true %>
            <a href="<%= avatar_path(avatar.id) %>" class="btn btn-primary btn-raised">VIEW</a>
            <% else %>
          <button class="btn btn-danger">NOT FOR SALE</button>
            <% end %>

          </div>
        </div>
          <% end %>




  </div>
